rate = 1.68
rate_night = rate / 2
previos_nigth_check = 5262
day_check = 5282
night_check = 5290

value_day = day_check - previos_nigth_check
value_day = float(value_day)
value_night = night_check - day_check
value_night = float(value_night)
payment = (rate * value_day) + (rate_night * value_night)
print((payment), "grn")
